<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondosm"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/tvNombreSkuCalidad"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/tvRtaS"
        android:background="@android:color/transparent"
        android:fontFamily="@font/francois_one"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/blanco_transparente"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvRtaS"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvNombreSkuCalidad"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/tvRtaM"
        android:background="@drawable/btmenu"
        android:cursorVisible="false"
        android:fontFamily="@font/francois_one"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/blanco_transparente"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvRtaM"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvNombreSkuCalidad"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btmenu"
        android:cursorVisible="false"
        android:fontFamily="@font/francois_one"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/blanco_transparente"
        android:textSize="22sp" />

</RelativeLayout>