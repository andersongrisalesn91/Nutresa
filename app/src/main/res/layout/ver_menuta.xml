<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="2dp"
    android:background="@android:color/transparent"
    android:padding="5dp">


    <Button
        android:id="@+id/buttonRVMenuTA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/imageViewRVMenuTA"
        android:background="@drawable/btmenu"
        android:fontFamily="@font/francois_one"
        android:text="Button"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewRVMenuTA"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/buttonRVMenuTA"
        android:layout_alignBottom="@+id/buttonRVMenuTA"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btmenu" />
</RelativeLayout>