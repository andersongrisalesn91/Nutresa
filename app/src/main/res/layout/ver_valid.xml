<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="1dp"
    android:background="@drawable/fondoitem1"
    android:padding="1dp">


    <Button
        android:id="@+id/buttonRVValidv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/imageViewRVValidv"
        android:background="@android:color/transparent"
        android:fontFamily="@font/francois_one"
        android:text="Button"
        android:textAlignment="center"
        android:textColor="@color/blanco_transparente"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageViewRVValidv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/btmenu" />
</RelativeLayout>