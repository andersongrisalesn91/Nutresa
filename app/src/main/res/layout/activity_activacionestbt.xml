<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondosm"
    tools:context=".Activacionestbt">

    <ImageView
        android:id="@+id/BarraPrincipal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/fondoitem1"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:srcCompat="@drawable/logo_blanco" />

    <ImageButton
        android:id="@+id/ibMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:onClick="MenuLateral"
        android:scaleType="centerInside"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_blanco" />

    <ImageButton
        android:id="@+id/ibTipoA"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/ibMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ictipoa" />

    <ImageButton
        android:id="@+id/ibValidaciones"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/ibCerrarSesion"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icvalid" />

    <ImageButton
        android:id="@+id/ibCerrarSesion"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:onClick="cerrarsesion"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volverblanco" />

    <ImageView
        android:id="@+id/ivTitulo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/fondosm"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BarraPrincipal" />

    <TextView
        android:id="@+id/TVNPantalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/francois_one"
        android:gravity="center_horizontal"
        android:text="ACTIVACIONES"
        android:textAlignment="center"
        android:textColor="@color/blanco_transparente"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BarraPrincipal" />

    <TextView
        android:id="@+id/tvPreguntaT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="Aqui va el texto de la pregunta que usaremos para llenar la pantalla"
        android:textColor="@color/blanco_transparente"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTitulo" />

    <EditText
        android:id="@+id/tbValTX"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:textAlignment="viewStart"
        android:textColor="@color/blanco_transparente"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPreguntaT" />

    <Button
        android:id="@+id/BTFotos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btmenu"
        android:fontFamily="@font/francois_one"
        android:onClick="Fototb"
        android:text="Foto"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/BTRegresar"
        app:layout_constraintEnd_toStartOf="@+id/BTSiguiente"
        app:layout_constraintStart_toEndOf="@+id/BTAtras" />

    <Button
        android:id="@+id/BTAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btmenu"
        android:fontFamily="@font/francois_one"
        android:onClick="Volver"
        android:text="Atras"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/BTRegresar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BTSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btmenu"
        android:fontFamily="@font/francois_one"
        android:onClick="Siguientetb"
        android:text="Siguiente"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/BTRegresar"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/BTRegresar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btmenu"
        android:fontFamily="@font/francois_one"
        android:onClick="Regresar"
        android:text="Regresar"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/BTFotos"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/BTFotos" />
</android.support.constraint.ConstraintLayout>