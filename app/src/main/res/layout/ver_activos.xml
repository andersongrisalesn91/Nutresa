<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/fondoitem1"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/tvCodBar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/francois_one"
        android:gravity="center_vertical"
        android:hint="codigo Act"
        android:textAlignment="center"
        android:textColor="@color/blanco_transparente"
        android:textColorHint="@color/blanco_transparente"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvNombreActivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCodBar"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/tvRtaA"
        android:layout_toEndOf="@+id/tvCodBar"
        android:cursorVisible="false"
        android:fontFamily="@font/francois_one"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:hint="nombre del activo"
        android:textColor="@color/blanco_transparente"
        android:textColorHint="@color/blanco_transparente"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvRtaA"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCodBar"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/tvRtaAC"
        android:background="@drawable/btmenu"
        android:cursorVisible="false"
        android:fontFamily="@font/francois_one"
        android:gravity="center_vertical"
        android:hint="Tiene"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textAlignment="center"
        android:textColor="@color/blanco_transparente"
        android:textColorHint="@color/blanco_transparente"
        android:textSize="16sp" />
    android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRtaAC"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCodBar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btmenu"
        android:cursorVisible="false"
        android:fontFamily="@font/francois_one"
        android:gravity="center_vertical"
        android:hint="Tiene"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textAlignment="center"
        android:textColor="@color/blanco_transparente"
        android:textColorHint="@color/blanco_transparente"
        android:textSize="16sp" />
    android:textStyle="bold" />

</RelativeLayout>