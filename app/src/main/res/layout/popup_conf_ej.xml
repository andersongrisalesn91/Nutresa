<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@color/blanco_fondopop">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/popupborde">

        <TextView
            android:id="@+id/textoConEj"
            android:layout_width="478dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/francois_one"
            android:text="Texto de conf. ejemplo"
            android:textAlignment="center"
            android:textColor="@color/azulletras"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageViewPopEj"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_below="@+id/textoConEj"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/buttonEjVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewPopEj"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="54dp"
            android:background="@drawable/btmenu"
            android:fontFamily="@font/francois_one"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="NO"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonEjConf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonEjVolver"
            android:layout_alignEnd="@+id/textoConEj"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btmenu"
            android:fontFamily="@font/francois_one"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="SI"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="22sp" />
    </RelativeLayout>
</RelativeLayout>